{
  "manifest_version": 3,
  "name": "Manga Translator AI",
  "version": "1.1.0",
  "description": "ترجمة المانجا والمانهوا بالذكاء الاصطناعي - مجاني 100%",
  "default_locale": "ar",
  
  "permissions": [
    "activeTab",
    "storage",
    "offscreen"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/content.js"],
    "css": ["content/content.css"]
  }],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  
  "web_accessible_resources": [{
    "resources": [
      "lib/tesseract/*"
    ],
    "matches": ["<all_urls>"]
  }],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}